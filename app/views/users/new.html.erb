<h1>Create User</h1>
<p>send post request to users#create</p>
<<p style="color: red"><%= flash[:message] %></p>
<%= form_for @user do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :username %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
